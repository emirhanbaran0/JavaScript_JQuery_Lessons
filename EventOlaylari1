        $(function(){
            $("p").on({
                mouseenter:function(){
                    $(this).css("background-color","darkyellow").css("height","900px")
                },
                mouseleave:function(){
                    $(this).css("background-color","height","50px")
                },
                dblclick:function(){
                    $("p").css("bacground-color","green")
                }
            })
        })
